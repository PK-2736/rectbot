{
  "title": "游꿛 Colored Logs Dashboard",
  "uid": "colored-logs",
  "tags": ["logs", "loki", "pm2", "colored"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "style": "dark",
  "refresh": "10s",
  "time": {
    "from": "now-30m",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m"]
  },
  "templating": {
    "list": []
  },
  "annotations": {
    "list": []
  },
  "panels": [
    {
      "id": 1,
      "type": "logs",
      "title": "游꿛 PM2 Logs (Color Coded)",
      "datasource": "Loki",
      "gridPos": {"h": 14, "w": 24, "x": 0, "y": 0},
      "targets": [
        {
          "refId": "A",
          "expr": "{job=\"pm2\"} | line_format \"{{ $lvl := .level }}{{ if eq $lvl \\\"error\\\" }}涌쪝{ else if eq $lvl \\\"warn\\\" }}涌쪝{ else if eq $lvl \\\"debug\\\" }}游댯{{ else }}游릭{{ end }} [{{ if $lvl }}{{ $lvl | ToUpper }}{{ else }}UNKNOWN{{ end }}] {{ .line }}\""
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": false,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "游댮 Errors (5m)",
      "datasource": "Loki",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 14},
      "targets": [
        {
          "refId": "A",
          "expr": "sum(count_over_time({job=\"pm2\", level=\"error\"} [5m]))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 1},
              {"color": "red", "value": 10}
            ]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "center",
        "orientation": "auto"
      }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "游리 Warnings (5m)",
      "datasource": "Loki",
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 14},
      "targets": [
        {
          "refId": "A",
          "expr": "sum(count_over_time({job=\"pm2\", level=\"warn\"} [5m]))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 5},
              {"color": "orange", "value": 15}
            ]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "center",
        "orientation": "auto"
      }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "游릭 Info (5m)",
      "datasource": "Loki",
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 14},
      "targets": [
        {
          "refId": "A",
          "expr": "sum(count_over_time({job=\"pm2\", level=\"info\"} [5m]))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"}
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center",
        "orientation": "auto"
      }
    },
    {
      "id": 5,
      "type": "stat",
      "title": "游늵 Total Logs (5m)",
      "datasource": "Loki",
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 14},
      "targets": [
        {
          "refId": "A",
          "expr": "sum(count_over_time({job=\"pm2\"} [5m]))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"}
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center",
        "orientation": "auto"
      }
    },
    {
      "id": 6,
      "type": "logs",
      "title": "游댮 Errors Only",
      "datasource": "Loki",
      "gridPos": {"h": 10, "w": 12, "x": 0, "y": 18},
      "targets": [
        {
          "refId": "A",
          "expr": "{job=\"pm2\", level=\"error\"}"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      }
    },
    {
      "id": 7,
      "type": "logs",
      "title": "游리 Warnings Only",
      "datasource": "Loki",
      "gridPos": {"h": 10, "w": 12, "x": 12, "y": 18},
      "targets": [
        {
          "refId": "A",
          "expr": "{job=\"pm2\", level=\"warn\"}"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      }
    },
    {
      "id": 8,
      "type": "timeseries",
      "title": "游늳 Log Rate by Level",
      "datasource": "Loki",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 28},
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate({job=\"pm2\", level=\"error\"} [$__interval]))",
          "legendFormat": "游댮 Errors/sec"
        },
        {
          "refId": "B",
          "expr": "sum(rate({job=\"pm2\", level=\"warn\"} [$__interval]))",
          "legendFormat": "游리 Warn/sec"
        },
        {
          "refId": "C",
          "expr": "sum(rate({job=\"pm2\", level=\"info\"} [$__interval]))",
          "legendFormat": "游릭 Info/sec"
        },
        {
          "refId": "D",
          "expr": "sum(rate({job=\"pm2\"} [$__interval]))",
          "legendFormat": "游늵 Total/sec"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 20,
            "showPoints": "auto"
          }
        },
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "游댮 Errors/sec"},
            "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}}]
          },
          {
            "matcher": {"id": "byName", "options": "游리 Warn/sec"},
            "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "yellow"}}]
          },
          {
            "matcher": {"id": "byName", "options": "游릭 Info/sec"},
            "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "green"}}]
          },
          {
            "matcher": {"id": "byName", "options": "游늵 Total/sec"},
            "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "blue"}}]
          }
        ]
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "calcs": ["last"]
        },
        "tooltip": {
          "mode": "multi",
          "sort": "desc"
        }
      }
    }
  ]
}
