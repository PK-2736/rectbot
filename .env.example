# ==========================================
# rectbot 環境変数サンプル
# ==========================================
# このファイルを `.env` にコピーして、実際の値を設定してください。
# ⚠️ .env ファイルは Git にコミットしないでください！

# ------------------------------------------
# Discord Bot 設定
# ------------------------------------------
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here

# ------------------------------------------
# Backend API 設定
# ------------------------------------------
BACKEND_API_URL=https://api.recrubo.net
# ⚠️ SERVICE_TOKEN は絶対にフロントエンドに公開しない
SERVICE_TOKEN=your_secure_service_token_here
INTERNAL_SECRET=your_internal_secret_here

# ------------------------------------------
# Supabase 設定
# ------------------------------------------
SUPABASE_URL=https://your-project.supabase.co
# ✅ フロントエンドで使用可能（公開OK）
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
# ⚠️ SERVICE_ROLE_KEY は絶対にフロントエンドに含めない！バックエンドのみ使用
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_PROJECT_REF=your-project-ref
SUPABASE_DB_PASSWORD=your-database-password

# ------------------------------------------
# Cloudflare R2 バックアップ設定
# ------------------------------------------
R2_ACCOUNT_ID=your_r2_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=rectbot-backups
BACKUP_RETENTION_DAYS=30

# ------------------------------------------
# Redis 設定
# ------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_if_needed

# ------------------------------------------
# Sentry エラートラッキング
# ------------------------------------------
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your_sentry_auth_token
SENTRY_ORG=your-org-slug
SENTRY_PROJECT=your-project-slug

# ------------------------------------------
# Grafana 監視
# ------------------------------------------
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password
GRAFANA_DOMAIN=grafana.recrubo.net
GRAFANA_ROOT_URL=https://grafana.recrubo.net/
# ⚠️ Grafana データソース用トークン（バックエンドのGRAFANA_ACCESS_TOKENと同じ値）
GRAFANA_TOKEN=your_grafana_access_token_here

# ------------------------------------------
# その他
# ------------------------------------------
NODE_ENV=development
FAILOVER_ENABLED=false
SITE_ID=oci

# ------------------------------------------
# フロントエンド（Next.js）用環境変数
# ------------------------------------------
# 注意: NEXT_PUBLIC_ で始まる変数はクライアント側に公開されます
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
NEXT_PUBLIC_API_URL=https://api.recrubo.net
