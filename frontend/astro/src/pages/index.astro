---
import BaseLayout from "../layouts/BaseLayout.astro";

// 公開設定（ヘルプセンター）
const supportUrl = import.meta.env.PUBLIC_SUPPORT_PORTAL_URL ?? 'https://support.recrubo.net';
// サポートサーバー招待（固定URL指定）
const supportServerUrl = 'https://discord.gg/tJAGc9aRdc';
// APIベース URL（環境変数で上書き可能 / 末尾スラッシュ除去）
const apiBaseUrl = (import.meta.env.PUBLIC_API_BASE_URL && import.meta.env.PUBLIC_API_BASE_URL.trim() !== '')
  ? import.meta.env.PUBLIC_API_BASE_URL.trim().replace(/\/$/, '')
  : 'https://api.recrubo.net';
// Astro サーバー経由のワンタイム招待生成エンドポイント
const inviteRequestEndpoint = '/api/bot-invite.json';
// フォールバック（固定OAuth招待URL）: 環境変数で指定可能。未設定なら null 扱い
const fallbackInviteUrl = (import.meta.env.PUBLIC_DISCORD_INVITE_URL && import.meta.env.PUBLIC_DISCORD_INVITE_URL.trim() !== '')
  ? import.meta.env.PUBLIC_DISCORD_INVITE_URL.trim()
  : null;

// クライアント側 script に安全に埋め込むため JSON.stringify 済み文字列を用意
const serializedInviteEndpoint = JSON.stringify(inviteRequestEndpoint);
const serializedFallbackUrl = JSON.stringify(fallbackInviteUrl);
const serializedApiBaseUrl = JSON.stringify(apiBaseUrl);

// FAQ構造化データ（検索スニペット強化）
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: [
    {
      "@type": "Question",
      name: "Recruboとは何ですか？",
      acceptedAnswer: {
        "@type": "Answer",
        text: "RecruboはDiscordのゲーム募集を効率化するボットです。埋め込み画像で視覚的にわかりやすい募集投稿、フレンドコード管理、高速レスポンスでサーバー運営をサポートします。"
      }
    },
    {
      "@type": "Question",
      name: "Recruboは無料で使えますか？",
      acceptedAnswer: {
        "@type": "Answer",
        text: "はい、Recruboは完全無料でご利用いただけます。基本機能はすべて無料で提供しており、追加料金は一切かかりません。"
      }
    },
    {
      "@type": "Question",
      name: "Recruboをサーバーに導入する方法は？",
      acceptedAnswer: {
        "@type": "Answer",
        text: "公式サイトの招待ボタンをクリックし、Discordの認証画面でサーバーを選択するだけで導入完了です。管理者権限が必要です。"
      }
    },
    {
      "@type": "Question",
      name: "どのようなゲームの募集に対応していますか？",
      acceptedAnswer: {
        "@type": "Answer",
        text: "あらゆるゲームの募集に対応しています。FPS、MMORPG、カードゲーム、協力プレイなど、ジャンルを問わず利用できます。"
      }
    }
  ]
};
---
<BaseLayout>
  <!-- FAQ構造化データ -->
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)}></script>
  
  <!-- Hero Section -->
  <section class="section-padding bg-gradient-to-br from-blue-50 via-white to-purple-50 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-r from-brand-500/5 to-accent-500/5"></div>
    <div class="absolute top-0 left-0 w-full h-full opacity-20">
      <svg viewBox="0 0 100 100" class="w-full h-full">
        <defs>
          <pattern id="dots" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
            <circle cx="10" cy="10" r="1" fill="currentColor" class="text-brand-300"/>
          </pattern>
        </defs>
        <rect width="100" height="100" fill="url(#dots)"/>
      </svg>
    </div>
    <div class="container relative z-10">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center animate-fade-in-up">
        <div class="mb-12">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 bg-gradient-to-r from-brand-500 to-accent-500 text-transparent bg-clip-text">
            Recruboで募集をスムーズに
