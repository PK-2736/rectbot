---
export interface Props {
  title?: string;
}
const { title = "コマンド説明" } = Astro.props;
---
<section class="section-padding bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 min-h-[60vh]">
  <div class="container max-w-2xl mx-auto">
    <div class="bg-slate-800/80 rounded-2xl shadow-2xl p-8 border border-blue-700">
      <h1 class="text-3xl md:text-4xl font-bold text-blue-400 mb-4 text-center drop-shadow">{title}</h1>
      <slot />
    </div>
  </div>
</section>
