---
export interface Props {
  title?: string;
}
const { title = "コマンド説明" } = Astro.props;
---
<section class="py-16 sm:py-20 bg-gradient-to-br from-brand-50 via-white to-rose-50">
  <div class="container max-w-2xl mx-auto">
    <div class="bg-white rounded-2xl shadow-sm hover:shadow-md transition-shadow p-8 border border-brand-100">
      <h1 class="text-3xl md:text-4xl font-bold mb-4 text-center bg-gradient-to-r from-brand-500 to-accent-500 text-transparent bg-clip-text">
        {title}
      </h1>
      <div class="prose prose-slate max-w-none">
        <slot />
      </div>
    </div>
  </div>
</section>
