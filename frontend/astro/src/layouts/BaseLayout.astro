---
import "../styles/global.css";

export interface Props {
  title?: string;
  description?: string;
}

const { title = "Recrubo - Discordボットでゲーム募集をスムーズに", description = "Recrubo（りくるぼ）は、Discordのゲーム募集をスムーズにするボット。埋め込み画像で視覚的に分りやすい募集を投稿、フレンドコードの一元管理、高速レスポンスでサーバー運営を効率化。" } = Astro.props;
// ビルド時刻（検索結果に更新日を表示させるためのメタ・構造化データに使用）
const updatedISO = new Date().toISOString();
const updatedDisplay = new Date(updatedISO).toLocaleString('ja-JP', { timeZone: 'Asia/Tokyo' });
// サイトURL・画像URL（検索スニペット用）
const siteUrl = 'https://recrubo.net';
const currentUrl = new URL(Astro.url.pathname, siteUrl).toString();
const logoUrl = `${siteUrl}/logo.png`;
const faviconUrl = `${siteUrl}/favicon.ico`;
const ogImageUrl = `${siteUrl}/logo.png`; // OGP画像（検索スニペットに表示）
---
<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Favicon - 検索結果とブラウザタブ用 -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="192x192" href="/logo.png" />
    <link rel="icon" type="image/png" sizes="512x512" href="/logo.png" />
    <link rel="apple-touch-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/logo.png" />
    
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#ff7e42" />
    <meta name="keywords" content="Discord,ボット,ゲーム募集,フレンドコード,Recrubo,りくるぼ,コミュニティ管理,Discord bot,game recruitment,gaming community" />
    <meta name="author" content="Recrubo" />
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <meta name="googlebot" content="index, follow" />
    <link rel="canonical" href={currentUrl} />
    <link rel="sitemap" type="application/xml" href="/sitemap.xml" />
    <!-- Updated time for SEO snippets -->
    <meta property="og:updated_time" content={updatedISO} />
    <meta property="article:modified_time" content={updatedISO} />
    <meta name="modified" content={updatedISO} />
    <meta name="last-modified" content={updatedISO} />
    <meta itemprop="dateModified" content={updatedISO} />
    
    <!-- Schema.org structured data for Organization -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Recrubo",
      "alternateName": "りくるぼ",
      "url": "https://recrubo.net",
      "logo": {
        "@type": "ImageObject",
        "url": "https://recrubo.net/logo.png",
        "width": "1024",
        "height": "1024"
      },
      "description": "Discordのゲーム募集をスムーズにするボット",
      "foundingDate": "2024",
      "sameAs": [
        "https://discord.gg/tJAGc9aRdc",
        "https://github.com/PK-2736/rectbot"
      ],
      "contactPoint": {
        "@type": "ContactPoint",
        "contactType": "Customer Support",
        "url": "https://support.recrubo.net"
      }
    })} />
    
    <!-- Schema.org structured data for WebPage -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "WebPage",
      "name": title,
      "description": description,
      "url": currentUrl,
      "dateModified": updatedISO,
      "inLanguage": "ja",
      "publisher": {
        "@type": "Organization",
        "name": "Recrubo",
        "logo": {
          "@type": "ImageObject",
          "url": "https://recrubo.net/logo.png"
        }
      },
      "breadcrumb": {
        "@type": "BreadcrumbList",
        "itemListElement": [
          {
            "@type": "ListItem",
            "position": 1,
            "name": "ホーム",
            "item": "https://recrubo.net"
          }
        ]
      }
    })} />
    
    <!-- Schema.org structured data for SoftwareApplication (Bot) -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "SoftwareApplication",
      "name": "Recrubo",
      "alternateName": "りくるぼ",
      "applicationCategory": "CommunicationApplication",
      "operatingSystem": "Discord",
      "description": "Discordのゲーム募集をスムーズにするボット。埋め込み画像で視覚的に分りやすい募集を投稿、フレンドコードの一元管理、高速レスポンスでサーバー運営を効率化。",
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "JPY"
      },
      "aggregateRating": {
        "@type": "AggregateRating",
