    <meta property="og:image:width" content="1024" />
    <meta property="og:image:height" content="1024" />
    <meta property="og:image:alt" content="Recruboロゴ" />
    <meta property="og:locale" content="ja_JP" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@recrubo" />
    <meta name="twitter:creator" content="@recrubo" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />
    <meta name="twitter:image:alt" content="Recruboロゴ" />
    <meta name="twitter:domain" content="recrubo.net" />
    
    <!-- Google+ / Schema.org -->
    <meta itemprop="name" content={title} />
    <meta itemprop="description" content={description} />
    <meta itemprop="image" content={ogImageUrl} />
    
  <!-- Favicon & Icons -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon.ico" />
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon.ico" />
  <link rel="icon" type="image/png" sizes="192x192" href="/logo.png" />
  <link rel="icon" type="image/png" sizes="512x512" href="/logo.png" />
  <link rel="icon" type="image/png" sizes="1024x1024" href="/logo.png" />
  <link rel="apple-touch-icon" sizes="180x180" href="/logo.png" />
  <meta name="msapplication-TileImage" content="/logo.png" />
  <meta name="msapplication-TileColor" content="#ff7e42" />
    <meta name="apple-mobile-web-app-title" content="Recrubo" />
    
    <!-- PWA Manifest -->
    <link rel="manifest" href="/manifest.json" />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
  </head>
  <body class="font-inter antialiased bg-white text-slate-800">
    <!-- Navigation -->
    <nav class="fixed w-full z-50 bg-white/80 backdrop-blur-md border-b border-brand-100">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <h1 class="text-2xl font-bold bg-gradient-to-r from-brand-500 to-accent-500 text-transparent bg-clip-text">Recrubo</h1>
            </div>
          </div>
          <div class="hidden md:block">
            <div class="ml-10 flex items-baseline space-x-8">
              <a href="#features" class="text-slate-600 hover:text-slate-900 px-3 py-2 text-sm font-medium transition-colors">機能</a>
              <a href="#support" class="text-slate-600 hover:text-slate-900 px-3 py-2 text-sm font-medium transition-colors">サポート</a>
              <!-- <a href="https://dash.recrubo.net" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">ダッシュボード</a> -->
            </div>
          </div>
          <!-- Mobile menu button -->
          <div class="md:hidden">
            <button type="button" class="text-slate-600 hover:text-slate-900" id="mobile-menu-button">
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>
        </div>
      </div>
      <!-- Mobile menu -->
      <div class="md:hidden hidden" id="mobile-menu">
        <div class="px-2 pt-2 pb-3 space-y-1 bg-white/95 backdrop-blur-md border-t border-brand-100">
          <a href="#features" class="text-slate-700 hover:text-slate-900 block px-3 py-2 text-base font-medium">機能</a>
          <a href="#support" class="text-slate-700 hover:text-slate-900 block px-3 py-2 text-base font-medium">サポート</a>
          <!-- <a href="https://dash.recrubo.net" class="bg-blue-600 hover:bg-blue-700 text-white block px-3 py-2 rounded-lg text-base font-medium">ダッシュボード</a> -->
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="pt-16">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t border-brand-100">
      <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div class="col-span-1 md:col-span-2">
            <h3 class="text-2xl font-bold bg-gradient-to-r from-brand-500 to-accent-500 text-transparent bg-clip-text mb-4">Recrubo</h3>
            <p class="text-slate-600 mb-4 max-w-md">
              Discordのゲーム募集をより円滑に。ゲーミングコミュニティのためのDiscordボット。
            </p>
            <div class="flex space-x-4">
              <a href="#" class="text-slate-400 hover:text-slate-700 transition-colors">
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"/>
                </svg>
              </a>
              <a href="#" class="text-slate-400 hover:text-slate-700 transition-colors">
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 5.079 3.158 9.417 7.618 11.174-.105-.949-.199-2.403.042-3.441.219-.937 1.407-5.965 1.407-5.965s-.359-.719-.359-1.782c0-1.668.967-2.914 2.171-2.914 1.023 0 1.518.769 1.518 1.69 0 1.029-.655 2.568-.994 3.995-.283 1.194.599 2.169 1.777 2.169 2.133 0 3.772-2.249 3.772-5.495 0-2.873-2.064-4.882-5.012-4.882-3.414 0-5.418 2.561-5.418 5.207 0 1.031.397 2.138.893 2.738a.36.36 0 01.083.345l-.333 1.36c-.053.22-.174.267-.402.161-1.499-.698-2.436-2.889-2.436-4.649 0-3.785 2.75-7.262 7.929-7.262 4.163 0 7.398 2.967 7.398 6.931 0 4.136-2.607 7.464-6.227 7.464-1.216 0-2.357-.631-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146C9.57 23.812 10.763 24.009 12.017 24.009c6.624 0 11.99-5.367 11.99-11.988C24.007 5.367 18.641.001.012.001z"/>
                </svg>
              </a>
            </div>
          </div>
          <div>
            <h4 class="text-slate-900 font-semibold mb-4">製品</h4>
            <ul class="space-y-2">
              <li><a href="#features" class="text-slate-500 hover:text-slate-900 transition-colors">機能一覧</a></li>
              <!-- <li><a href="/dashboard" class="text-slate-400 hover:text-white transition-colors">ダッシュボード</a></li> -->
            </ul>
          </div>
          <div>
            <h4 class="text-slate-900 font-semibold mb-4">サポート</h4>
            <ul class="space-y-2">
              <li><a href="#" class="text-slate-500 hover:text-slate-900 transition-colors">ヘルプセンター</a></li>
              <li><a href="#" class="text-slate-500 hover:text-slate-900 transition-colors">Discordサーバー</a></li>
              <li><a href="#" class="text-slate-500 hover:text-slate-900 transition-colors">お問い合わせ</a></li>
            </ul>
          </div>
        </div>
        <div class="mt-8 pt-8 border-t border-brand-100">
          <div class="flex flex-col md:flex-row justify-between items-center">
            <p class="text-slate-500 text-sm">
              © 2025 Recrubo. All rights reserved.｜最終更新: {updatedDisplay}
            </p>
            <div class="flex space-x-6 mt-4 md:mt-0">
              <a href="/privacy" class="text-slate-500 hover:text-slate-900 text-sm transition-colors">プライバシーポリシー</a>
              <a href="/terms" class="text-slate-500 hover:text-slate-900 text-sm transition-colors">利用規約</a>
            </div>
          </div>
        </div>
      </div>
    </footer>

    <script>
      // Mobile menu toggle
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');
      
      if (mobileMenuButton && mobileMenu) {
        mobileMenuButton.addEventListener('click', () => {
          mobileMenu.classList.toggle('hidden');
        });
      }

      // Smooth scrolling for anchor links
      document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
          e.preventDefault();
          const target = document.querySelector(this.getAttribute('href'));
          if (target) {
            target.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        });
      });
    </script>
  </body>
</html>
